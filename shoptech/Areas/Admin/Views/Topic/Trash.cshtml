@model IEnumerable<shopdodadung.Models.Mtopic>

@{
    ViewBag.Title = "Quản lý thùng rác chủ đề bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-7">
                <strong class="text-danger text-uppercase">
                    Quản lý thùng rác chủ đề bài viết
                </strong>
            </div>
            <div class="col-md-5 text-right">
                <a href="~/admin/topic" class="btn btn-sm btn-danger"><i class="fas fa-times"></i>Thoát</a>
            </div>
        </div>
    </div>
    <div class="card-body p-2">
        @Html.Partial("_MessageAlert")
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>Chủ đề bài viết</th>
                <th>Cấp cha</th>
                <th>Thứ tự</th>
                <th>ngày tạo</th>
                <th>Chức năng</th>
                <th>ID</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="checkid[]" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ParentId)
                    </td>
                    <td>
                        <input type="number" value="@item.Orders" min="1" step="1" style="width:50px" name="hhh" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Created_at)
                    </td>
                    <td>

                        <a href="@Url.Action("Retrash", "Topic", new { id = item.Id })" class="btn btn-sm btn-info">
                            <i class="fas fa-undo-alt"></i>Khôi phục
                        </a>
                        <a href="@Url.Action("Delete", "Topic", new { id = item.Id })" class="btn btn-sm btn-danger">
                            <i class="fas fa-trash"></i>Xóa
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                </tr>
            }

        </table>
    </div>
</div>


