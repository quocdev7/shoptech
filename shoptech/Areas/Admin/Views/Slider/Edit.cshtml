@model shopdodadung.Models.Mslider

@{
    ViewBag.Title = "Cập nhập hình ảnh";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-7">
                    <strong class="text-danger text-uppercase">
                        Cập nhập Hình ảnh
                    </strong>
                </div>
                <div class="col-md-5 text-right">
                    <button type="submit" class="btn btn-sm btn-success"><i class="fas fa-save"></i>Lưu[Cập nhập]</button>
                    <a href="~/admin/slider" class="btn btn-sm btn-danger"><i class="fas fa-times"></i>Thoát</a>
                </div>
            </div>
        </div>
        <div class="card-body p-2">
            @Html.Partial("_MessageAlert")
            <div class="row">
                <div class="col-md-9">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)
                    <div class="form-group">
                        <label>Tên loại sản phẩm</label>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                    
                    <div class="form-group">
                        <label>Chức vụ</label>
                        <select name="Position" class="form-control">
                            <option value="mainmenu">Mainmenu</option>
                            <option value="footer">Footer</option>
                        </select>
                    </div>

                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Hình đại diện</label>
                        <input type="file" class="form-control" name="Img" />
                    </div>

                    <div class="form-group">
                        <label>Trạng thái</label>
                        @Html.DropDownListFor(model => model.Status, new[] { new SelectListItem { Value = "1", Text = "Xuất bản" }, new SelectListItem { Value = "2", Text = "Chưa xuất bản" } }, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                    </div>

                </div>
            </div>
        </div>
    </div>
}
