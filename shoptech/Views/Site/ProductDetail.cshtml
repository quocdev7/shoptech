@model IEnumerable<shopdodadung.Models.Mproduct>
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}

<div class="container">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-6">
                <img class="img-fluid" src="~/Images/slider/@product.Img" />
            </div>

            <div class="col-md-6">
                <h1>@product.Name</h1>
                <h3>@product.Price, "{0:#,###}" d</h3>
                <p>Mô tả Sản Phẩm</p>
            </div>
        }
    </div>
</div>

